@model List<BlogPreview>
@using My_Second_Umbraco_7_Site.Models

<div class="row">
    @for (int i = 0; i < Model.Count; i++)
    {
        @RenderBlogPreview(Model[i], i==0)
    }
</div>


@helper RenderBlogPreview(BlogPreview item, bool first = false)
{
    <div class="col-md-@(first ? "12" : "6")">
        <div class="fh5co-blog animate-box">
            <div class="title title-pin text-center">
                <span class="posted-on">@item.PostDate.ToString("MMM. dd yyyy")</span>
                <h3><a href="@item.LinkUrl">@item.Name</a></h3>
                <span class="category">@item.Category</span>
            </div>
            <a href="@item.LinkUrl"><img class="img-responsive" src="images/blog-1.jpg" alt=""></a>
            <div class="blog-text text-center">
                <p>@item.Intro</p>
                <ul class="fh5co-social-icons">
                    <li>Share:</li>
                    <li><a href="#"><i class="icon-twitter-with-circle"></i></a></li>
                    <li><a href="#"><i class="icon-facebook-with-circle"></i></a></li>
                    <li><a href="#"><i class="icon-linkedin-with-circle"></i></a></li>
                    <li><a href="#"><i class="icon-dribbble-with-circle"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
}
