@model ContactForm
@using My_Second_Umbraco_7_Site.Models
@using My_Second_Umbraco_7_Site.Controllers

@using (Html.BeginUmbracoForm<ContactController>("SubmitMessage"))
{
    <div class="form-group row">
        <div class="col-md-6 field">
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First name" })
        </div>
        <div class="col-md-6 field">
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Last name" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 field">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-mail" })
        </div>
        <div class="col-md-6 field">
            @Html.LabelFor(x => x.Phone)
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Phone" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12 field">
            @Html.LabelFor(x => x.Message)
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Message", rows="10", cols="30" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12 field">
            <input type="submit" id="submit" class="btn btn-primary" value="Send Message">
        </div>
    </div>
}

@section ScriptsBottom {
    <script src="/scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}