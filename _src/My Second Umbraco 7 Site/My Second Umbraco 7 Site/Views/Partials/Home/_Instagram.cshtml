@model Instagram
@using My_Second_Umbraco_7_Site.Models

@if (Model.HasPosts)
{
    <div id="fh5co-instagram">
        <div class="container">
            <div class="row animate-box">
                <div class="col-md-12 col-md-offset-0 text-center fh5co-heading">
                    <h2><span>@Model.Title</span></h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var post in Model.Posts)
            {
                <div class="@(Model.ColumnClass) nopadding animate-box" data-animate-effect="fadeIn">
                    <div class="insta" style="background-image: url(@post.Image);"></div>
                </div>
            }
        </div>
    </div>
}



